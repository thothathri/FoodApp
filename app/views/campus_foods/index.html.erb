<br/><h2 style="color:#3300CC;">All Campus free foods!!</h2><br/>

<h1> Search for Campus events by food</h1>
<form action="/campus_foods/search" method="get" id="search_form">
    <input id="food" class="searchBox" type="text" name="food"/>
    <input type="submit"  class="searchButton"  value="search"/>

  </form>

<table>
  <tr>
    <th style="width:120px">Event Title</th>
    <th style="width:120px">Free Food</th>
    <th style="width:120px">Location</th>
    <th style="width:120px">Date</th>
    <th style="width:90px">Starts at</th>
    <th style="width:90px">Ends at</th>
    <th style="width:150px">Description</th>
    <th style="width:50px"></th>
    <th style="width:50px"></th>
    <th style="width:50px"></th>
  </tr>

<% @campus_foods.sort_by(&:start).each do |campus_food| %>
  <tr <%- if campus_food.id % 2 !=0%> id="odd" <%-end-%>>
    <td style="padding:none;width:120px; text-align:center;"><%= campus_food.title %></td>
    <td style="width:120px;text-align:center;"><%= campus_food.food %></td>
    <td style="width:120px; text-align:center;"><%= campus_food.location %></td>
    <td style="width:120px; text-align:center;"><%= campus_food.date %></td>
    <td style="width:90px; text-align:center;"><%= campus_food.start %></td>
    <td style="width:90px; text-align:center;"><%= campus_food.end %></td>
    <td style="width:150px; text-align:center;"><%= campus_food.desc %></td>
    <td style="width:50px"><%= link_to 'Show', :controller => 'campus_foods', :action =>'show', :id => campus_food.id, :loc => campus_food.location %></td>
    <td style="width:50px"><%= link_to 'Edit', edit_campus_food_path(campus_food) %></td>
    <% if session[:admin_user] == true %> <td style="width:50px"><%= link_to 'Destroy', campus_food, confirm: 'Are you sure?', method: :delete %><% end %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Create a new campus food event!', new_campus_food_path %>
